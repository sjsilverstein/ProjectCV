<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap CS and my CS -->    
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" 
       integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/myCSS.css" asp-append-version="true" />
    <!-- Bootstrap JS, Popper.js, and jQuery and myJS-->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="~/js/myJS.js"></script>  
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-1 sidebar">
                <div class="row sidebar_top"></div>
                <div class="row sidebar_content">
                    <div class="col-12">
                        <div class="row sidebar_sq">
                            <div class="col-1"></div>
                            <div class="col-10">
                                <a href="https://github.com/sjsilverstein" target="_blank">
                                    <img class="social_icon img-fluid center" src="~/images/GitHub-Mark_Icon.png" alt="GitHub">
                                </a>
                            </div>
                            <div class="col-1"></div>
                        </div>
                        <div class="row sidebar_sq">
                            <div class="col-1"></div>
                            <div class="col-10">
                                <a href="https://www.linkedin.com/in/stephen-silverstein/" target="_blank">
                                    <img class="social_icon img-fluid center" src="~/images/Linkedin_Black_Icon.png" alt="Linkedin">
                                </a>
                            </div>
                            <div class="col-1"></div>
                        </div>                        
                        <div class="row sidebar_sq">
                            <div class="col-1"></div>
                            <div class="col-10">
                                <a href="https://www.facebook.com/sjsilverstein" target="_blank">
                                    <img class="social_icon img-fluid center" src="~/images/Facebook_Black_Icon.png" alt="Facebook">
                                </a>
                            </div>
                            <div class="col-1"></div>
                        </div> 
                    </div>
                    
                </div>
                <div class="row sidebar_bottom"></div>

            </div>
            <div class="col-11">
                <div class="row head_bar">
                    <div class="col-12">
                        <div class="row">
                            <div class="col-5">
                                <h1><a href="/">Stephen J Silverstein</a></h1>
                            </div>
                            <div class="col-6">
                                <div class="row">
                                    <div class="col-4 text-center">
                                        <a href="/Projects">Projects</a>
                                    </div>
                                    <div class="col-4 text-center">
                                        <a href="/Resume">Resume</a>
                                    </div>
                                    <div class="col-4 text-center">
                                        <a href="/ContactInfo">Contact</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-1">
                                <div class="dropdown">
                                    <button class="dropbtn">
                                        <img class="img-fluid center" src="~/images/Hamburger_Icon.png" alt="Burger">
                                    </button>
                                    <div class="dropdown-content">
                                        <a class="text-center" href="/Projects">Projects</a>
                                        <a class="text-center" href="/Resume">Resume</a>
                                        <a class="text-center" href="/ContactInfo">Contact</a>
                                    </div>
                                </div>                                
                            </div>
                        </div>                        
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
            
        </div>
        
    </div>
    <footer>
            <p class="text-center text-white">&copy; 2018 - Stephen J Silverstein</p>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
